<% layout('layouts/boilerplate') %>
<div id="map" style="width: 100%; height: 500px"></div>
<div class="container">
    <h1>All Swimming Holes</h1>
    <ul>
        <% for(let hole of swimholes) { %>
            <div class="card my-3">
                <div class="row">
                    <div class="col-md-4">
                        <img class="img-fluid" src="<%= hole.images[0].url %>" alt="Images of swimming holes">
                        <a class="btn btn-primary mt-1 mb-1" href="/swimholes/<%= hole._id %>">Details</a>
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title"><%= hole.title %></h5>
                            <p class="card-text">
                                <small class="text-muted"> <%= hole.state %></small>
                            <p class="card-text"><%= hole.description %></p>
                            </p>
                            
                        </div>
                    </div>
                </div>
            </div>
            <% } %> 
    </ul>
</div>
<script>
    const mapToken = '<%-process.env.MAPBOX_TOKEN%>'
    const swimholes = {features: <%-JSON.stringify(swimholes)%> }
</script>
<script src="/javascripts/cluster.js"></script>

