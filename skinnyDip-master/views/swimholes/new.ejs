<% layout('layouts/boilerplate') %>

<div class="row">
    <h1 class="text-center">New Swimming Hole</h1>
    <div class="col-10 offset-1">
        <form action="/swimholes" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="swimhole[title]" required>
                <div class="valid-feedback">
                    That works!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="title" >Location</label>
                <input class="form-control" type="text" placeholder="City, XX" id="state" name="swimhole[location]" required>
                <div class="valid-feedback">
                    That works!
                </div>
            </div>
            <div class="mb-3">
                <label for="image" class="form-label">Upload Images</label>
                <input class="form-control" type="file" id="image" name="image" multiple>
              </div>
            <div class="mb-3">
                <label class="form-label" for="price" >Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" class="form-control" placeholder="0.00" aria-label="price" aria-describedby="price-label" name="swimhole[price]" required>
                    <div class="valid-feedback">
                        That works!
                    </div>
                </div> 
            </div>
            <div class="mb-3">
                <label class="form-label" for="description" >Description</label>
                <textarea class="form-control" type="text" id="description" name="swimhole[description]" required></textarea>
                <div class="valid-feedback">
                    That works!
                </div>
            </div>
            
            <div class="mb-3">
            <button class="btn-success col-12">Add Swimhole</button>
            </div>   
        </form>
    
    </div>
</div>


    

