<% layout('layouts/boilerplate') %>

    <div class="row">
        <h1 class="text-center">Edit Swimming Hole</h1>
        <div class="col-6 offset-3">
            <form action="/swimholes/<%= swimhole._id %>?_method=PUT" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="swimhole[title]"
                    value="<%= swimhole.title %>" required>
                    <div class="valid-feedback">
                        That works!
                    </div>

                </div>
                <div class="mb-3">
                    <label class="form-label" for="title" >Location</label>
                    <input class="form-control" type="text" placeholder="City, XX" id="location" name="swimhole[location]"
                    value="<%= swimhole.location%>" required>
                    <div class="valid-feedback">
                        That works!
                    </div>
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Upload Images</label>
                    <input class="form-control" type="file" id="image" name="image" multiple>
                  </div>
                <div class="mb-3">
                    <label class="form-label" for="price" >Price</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">$</span>
                        <input type="text" class="form-control" placeholder="0.00" aria-label="price" aria-describedby="price-label" name="swimhole[price]" value="<%= swimhole.price%>" required>
                        <div class="valid-feedback">
                            That works!
                        </div>
                    </div> 
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description" >Description</label>
                    <textarea class="form-control" type="text" id="description" name="swimhole[description]" required><%= swimhole.description %></textarea>
                    <div class="valid-feedback">
                        That works!
                    </div>
                </div>
                <div class="mb-3">
                    <% swimhole.images.forEach(function (img, i) { %> 
                        <img src="<%=img.thumbnail%>" class="img-thumbnail" alt="">
                        <div class="form-check-inline">
                            <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
                            <label for="image-<%=i%>">Delete</label>
                        </div>
                        <% }) %> 
                </div>
                <div class="mb-3"> 
                <button class="btn-info">Update</button>
                </div>   
            </form>
        </div>
    </div>