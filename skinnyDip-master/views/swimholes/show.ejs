<% layout('layouts/boilerplate') %>
<link rel="stylesheet" href="/stylesheets/stars.css">
<script>
  const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
  const swimhole = <%-JSON.stringify(swimhole)%>;
</script>
<div class="row">
    <div class="col-6">
   
      <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
          <% swimhole.images.forEach((img, i) => { %> 
          <div class="carousel-item <%= i === 0 ? 'active' : ''%>" >
            <img src="<%=img.url%> " class="d-block w-100 " alt="">
          </div>
          <% }) %> 
        </div>
        <% if(swimhole.images.length > 1) { %>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls"  data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls"  data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
        <% } %> 
      </div>
        <div class="card mb-3">
            <div class="card-body">
              <h5 class="card-title"><%= swimhole.title %></h5>
              <p class="card-text"><%= swimhole.description %></p>
            </div>
            <ul class="list-group list-group-flush">
              <li class="list-group-item text-muted"><%= swimhole.state %> </li>
              <li class="list-group-item ">Submitted by: <%= swimhole.author.username %> </li>
              <li class="list-group-item ">$<%= swimhole.price %>/day </li>
             
            </ul>
            <% if ( currentUser && swimhole.author.equals(currentUser._id)) { %>
            <div class="card-body">
                <a class="card-link btn btn-info" href="/swimholes/<%= swimhole._id %>/edit">Edit</a>
                <form class="d-inline" action="/swimholes/<%= swimhole._id%>?_method=DELETE" method="POST">
                    <button class="btn btn-danger">Delete</button></form>
                <a class="card-link btn btn-warning" href="/swimholes">All Swimholes</a>
            </div>
            <% } %>
            <div class="card-footer text-muted">
                2 days ago
              </div>  
        </div>
      </div>
      <div class="col-6">
        <div id="map" style='width: 400px; height: 300px;'></div>

        <% if(currentUser) { %> 
        <h2>Leave a Review</h2>
        <form action="/swimholes/<%=swimhole._id%>/review" class="mb-3 validated-form" method="POST" novalidate>
          <fieldset class="starability-basic mb-3">
            <legend></legend>
            <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
            <input type="radio" id="first-rate1" name="review[rating]" value="1" />
            <label for="first-rate1" title="Terrible">1 star</label>
            <input type="radio" id="first-rate2" name="review[rating]" value="2" />
            <label for="first-rate2" title="Not good">2 stars</label>
            <input type="radio" id="first-rate3" name="review[rating]" value="3" />
            <label for="first-rate3" title="Average">3 stars</label>
            <input type="radio" id="first-rate4" name="review[rating]" value="4" />
            <label for="first-rate4" title="Very good">4 stars</label>
            <input type="radio" id="first-rate5" name="review[rating]" value="5" />
            <label for="first-rate5" title="Amazing">5 stars</label>
          </fieldset>
          <div class="mb-3">
            <label class="form-label" for="body">Review text:</label>
              <textarea class="form-control" name="review[body]" id="body" cols="30" rows="3" required></textarea>
              <div class="valid-feedback">
                Looks good!
              </div>
            </div>
          <button class="btn btn-success">Submit</button>
        </form>
        <% } %> 
        <% for(let review of swimhole.reviews) { %> 
          <div class="card mb-3">
            <div class="card-body">
              <h5 class="card-title"><%= review.author.username%></h5>
              <p class="starability-result" data-rating="<%=review.rating%>">
                Rated: <%= review.rating %> stars 
              </p>
              <p class="card-text"><%= review.body%></p>
              <% if ( currentUser && review.author.equals(currentUser._id)) { %>
              <form action="/swimholes/<%=swimhole._id%>/review/<%=review._id%>?_method=DELETE" method="POST">
              <button class="btn btn-sm btn-danger">Delete</button>
            </form>
            <% } %> 
          </div>
        </div>
        <% } %> 
      </div>
</div>
 
<script src="/javascripts/showPageMap.js"></script>
